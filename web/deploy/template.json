{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "uniqueResourceNamePrefix": {
        "type": "string"
      }
    },
    "variables": {

        "resourceNamePrefix": "[concat(parameters('uniqueResourceNamePrefix'),'-proxy')]",

        "functionsAppServicePlanName": "[concat(variables('resourceNamePrefix'),'-asp')]",
        "functionsApiProxyAppName": "[concat(variables('resourceNamePrefix'),'-api')]",

        "urlPrefix": "https://",

        "urlSuffix": ".azurewebsites.net",

        "functionAppProxyUrl": "[concat(variables('urlPrefix'), variables('resourceNamePrefix'), '-proxy-api', variables('urlSuffix'))]",

        "appServicePlanName": "[concat(variables('resourceNamePrefix'), '-asp')]",

        "appServiceName": "[concat(variables('resourceNamePrefix'), '-app')]",

        "appHostingPlanNameVar": "[concat(variables('appServicePlanName'),'-apps')]",

        "appInsightsResourceId": "[resourceId(concat(parameters('uniqueResourceNamePrefix'),'-monitor'), 'Microsoft.Insights/components', concat(parameters('uniqueResourceNamePrefix'),'-monitor-ai'))]"

    },
    "resources": [
      {
        "name": "[variables('appHostingPlanNameVar')]",
        "type": "Microsoft.Web/serverfarms",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-08-01",
        "sku": {
          "name": "F1"
        },
        "dependsOn": [ ],
        "tags": {
          "displayName": "appServicePlan"
        },
        "properties": {
          "name": "[variables('appHostingPlanNameVar')]",
          "numberOfWorkers": 1
        }
      },
      {
        "name": "[variables('appServiceName')]",
        "type": "Microsoft.Web/sites",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-08-01",
        "resources": [
            {
                "name": "web",
                "type": "config",
                "apiVersion": "2015-08-01",
                "properties": {
                    "webSocketsEnabled": true
                },
                "dependsOn": [
                    "[resourceId('Microsoft.Web/sites', variables('appServiceName'))]"
                ]
            },
            {
                "name": "appsettings",
                "type": "config",
                "apiVersion": "2015-08-01",
                "dependsOn": [
                    "[resourceId('Microsoft.Web/sites', variables('appServiceName'))]"
                ],
                "tags": {
                    "displayName": "WebAppSettings"
                },
                "properties": {
                    "FUNCTION_API_PROXY_ROOT": "[variables('functionAppProxyUrl')]",
                    "APPINSIGHTS_INSTRUMENTATIONKEY": "[reference(variables('appInsightsResourceId'), '2014-04-01').InstrumentationKey]",
                    "WEBSITE_NODE_DEFAULT_VERSION": "6.9.1"
                }
            }
        ],
        "tags": {
          "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', variables('appHostingPlanNameVar')))]": "Resource",
          "displayName": "webApp"
        },
        "properties": {
          "name": "[variables('appServiceName')]",
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appHostingPlanNameVar'))]"
        },
        "dependsOn": [
            "[resourceId('Microsoft.Web/serverfarms', variables('appHostingPlanNameVar'))]"
        ]
      }
     ],
    "outputs": {}
  }